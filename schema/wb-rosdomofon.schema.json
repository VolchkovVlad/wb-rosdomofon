            "id",
            "enable",
            "comment",
            "number",
            "token",
            "listDevices"
        ],
        "required": [
            "id",
            "enable",
            "comment",
            "number",
            "token",
            "listDevices"
        ]
      }
    },
    "properties": {
      "enableDriver": {
        "type": "boolean",
        "title": "Enable driver",
        "default": true,
        "_format": "checkbox",
        "propertyOrder": 2,
        "options": {
          "grid_columns": 3
        }
      },
      "debug": {
        "type": "boolean",
        "title": "Enable debug logging",
        "default": false,
        "_format": "checkbox",
        "propertyOrder": 3,
        "options": {
          "grid_columns": 3
        }
      },
      "configVersion": {
        "type": "string",
        "title": "Config file version",
        "template": "0.0.1",
        "_format": "text",
        "readonly": true,
        "propertyOrder": 4,
        "options": {
          "grid_columns": 3
        }
      },
      "driverVersion": {
        "type": "string",
        "title": "Driver version",
        "_format": "text",
        "readonly": true,
        "propertyOrder": 5,
        "options": {
          "grid_columns": 3
        }
      },
      "mqttIP": {
        "type": "string",
        "title": "MQTT IP",
        "_format": "text",
        "default": "localhost",
        "readonly": false,
        "propertyOrder": 6,
        "options": {
          "grid_columns": 3
        }
      },
      "mqttPort": {
        "type": "string",
        "title": "MQTT port",
        "_format": "text",
        "readonly": false,
         "default": "1883",
        "propertyOrder": 7,
        "options": {
          "grid_columns": 3
        }
      },
      "mqttLogin": {
        "type": "string",
        "title": "MQTT login",
        "_format": "text",
        "readonly": false,
        "propertyOrder": 8,
        "options": {
          "grid_columns": 3
        }
      },
      "mqttPassword": {
        "type": "string",
        "title": "MQTT password",
        "_format": "text",
        "readonly": false,
        "propertyOrder": 9,
        "options": {
          "grid_columns": 3
        }
      },
      "users": {
        "type": "array",
        "title": "Users",
        "items": {
          "$ref": "#/definitions/user"
        },
        "minItems": 1,
        "_format": "tabs-top",
        "propertyOrder": 10,
        "default": {},
        "options": {
          "compact": false,
          "enable_array_copy": true,
          "disable_collapse": true,
          "disable_array_delete_last_row": true
        }
      }
    },
    "options": {
      "compact": true,
      "disable_collapse": true,
      "disable_edit_json": false,
      "disable_properties": false,
      "titleHidden": true,
      "wb": {
        "disable_title": false,
        "disable_panel": true
      }
    },
    "defaultProperties": [
      "debug",
      "configVersion",
      "enableDriver",
      "driverVersion",
      "mqttIP",
      "mqttPort",
      "mqttLogin",
      "mqttPassword",
      "users"
    ],
    "required": [
      "debug",
      "configVersion",
      "enableDriver",
      "driverVersion",
      "mqttIP",
      "mqttPort",
      "mqttLogin",
      "mqttPassword",
      "users"
    ],
