{
    "$schema": "http://json-schema.org/draft-07/hyper-schema#",
    "title": "Title schema",
    "type": "object",
    "_format": "grid",
    "definitions": {
      "Device": {
        "type": "object",
        "_format": "grid",
        "headerTemplate": "headerTemplate_Device",
        "title": "Device",
        "propertyOrder": 6,
        "properties": {
          "enable": {
            "type": "string",
            "title": "Enable adapter",
            "propertyOrder": 1,
            "default": "üü¢",
            "enum": ["üü¢", "üî¥"],
            "options": {
                "enum_titles": ["üü¢ Enable", "üî¥ Disable"],
                "grid_columns": 2
            }
        },
          "comment": {
            "type": "string",
            "title": "Comment",
            "propertyOrder": 1,
            "default": "",
            "options": {
                "grid_columns": 4
            }
          },
          "adapterId": {
              "type": "string",
              "title": "Adapter ID",
              "propertyOrder": 4,
              "readonly": true,
              "default": "",
              "options": {
                  "grid_columns": 2
              }
          },
          "relay": {
              "type": "string",
              "title": "Relay adapter",
              "propertyOrder": 4,
              "readonly": true,
              "default": "",
              "options": {
                  "grid_columns": 2
              }
          },
          "camId": {
              "type": "string",
              "title": "Camera ID",
              "propertyOrder": 5,
              "readonly": true,
              "default": "",
              "options": {
                  "grid_columns": 2
              }
          },
          "type": {
              "type": "string",
              "title": "Device type",
              "propertyOrder": 6,
              "readonly": true,
              "default": "",
              "options": {
                  "hidden": true,
                  "grid_columns": 2
              }
          }
        },
        "defaultProperties": [
          "enable",
          "comment",
          "adapterId"
        ],
        "required": [
          "enable",
          "comment",
          "adapterId"
        ],
        "options": {
            "compact": true,
            "grid_columns": 12,
            "keep_oneof_values": false,
            "keep_only_existing_values": false,
            "disable_collapse": true,
            "disable_properties": true,
            "disable_edit_json": true,
            "wb": {
                "disable_title": true
            }
        }
      },
      "user": {
        "type": "object",
        "_format": "grid",
        "title": "User",
        "headerTemplate": "headerTemplate_User",
        "properties": {
            "enable": {
                "type": "string",
                "title": "Enable user",
                "propertyOrder": 1,
                "default": "üü¢",
                "enum": ["üü¢", "üî¥"],
                "options": {
                    "enum_titles": ["üü¢ Enable", "üî¥ Disable"],
                    "grid_columns": 2
                }
            },
            "id": {
                "type": "string",
                "title": "ID",
                "propertyOrder": 2,
                "default": "1",
                "options": {
                    "grid_columns": 1
                }
            },
            "comment": {
                "type": "string",
                "title": "Comment",
                "propertyOrder": 3,
                "default": "",
                "options": {
                    "grid_columns": 2
                }
            },
            "number": {
                "type": "string",
                "title": "Phone humber",
                "propertyOrder": 4,
                "readonly": true,
                "default": "",
                "options": {
                    "grid_columns": 2
                }
            },
            "token": {
                "type": "string",
                "title": "Refresh token",
                "propertyOrder": 4,
                "readonly": true,
                "default": "",
                "options": {
                    "grid_columns": 4
                }
            },
            "listDevices": {
                "type": "array",
                "title": "List of devices",
                "items": {
                  "$ref": "#/definitions/Device"
                },
                "minItems": 0,
                "_format": "tabs",
                "propertyOrder": 5,
                "options": {
                  "compact": false,
                  "grid_columns": 6,
                  "enable_array_copy": true,
                  "disable_collapse": true,
                  "array_controls_top": true,
                  "disable_array_delete_last_row": true
